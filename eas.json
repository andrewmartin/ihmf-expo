{
    "cli": {
        "requireCommit": true
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "EXPO_PUBLIC_SITE_URI": "https://ihatemyfriends.app"
            }
        },
        "development-simulator": {
            "extends": "development",
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "distribution": "internal"
        },
        "production": {
            "env": {
                "EXPO_PUBLIC_SITE_URI": "https://ihatemyfriends.app"
            }
        }
    }
}
